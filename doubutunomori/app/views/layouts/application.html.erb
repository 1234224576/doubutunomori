            <li><a href="mypage"><%= image_tag('gnav_04.png') %></a></li>
        </ul>
    </div>

    <div class="box">
        <div class="content">
            <%= yield %>
        </div>
        <div class="sideMenu">
            <div id="login">
                <a href="signin"><%= image_tag('sidebar_btn_twitter.png') %></a>
            </div>
            <div id="ranking">
                <a href="#"><%= image_tag('sidebar_ranking_head.png') %></a>
            </div>
            <div id="rankBox">
                <ul>
                <li><%= image_tag('ranking_no1.png') %>
                <p>さかたさん<br />null村</p>
                <div id="rankImage">
                    <%= image_tag('sample.png') %>
                </div>
                </li>
                <li><%= image_tag('ranking_no2.png') %>
                <p>さかたさん<br />null村</p>
                <div id="rankImage">
                    <%= image_tag('sample.png') %>
                </div>
                </li>
                <li><%= image_tag('ranking_no3.png') %>
                <p>さかたさん<br />null村</p>
                <div id="rankImage">
                    <%= image_tag('sample.png') %>
                </div>
                </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="foot">
        <%= image_tag('footer_bg_top.png') %>
        <div id ="footercontent">
            <br /><a href="#">トップ</a>　<a href="#">使い方</a>　<a href="#">お問い合わせ</a>
        </div>
    </div>
</div>

</body>
</html>
