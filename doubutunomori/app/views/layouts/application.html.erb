<!DOCTYPE html>
<html>
<head>
  <title>Doubutunomori</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<body background="<%= asset_path "main_bg.png" %>">
<div class="page">
    <div class="title">
        <div id="gamelogo"><%= image_tag('header_logo_game.png') %></div>
        <div id="mainlogo"><%= image_tag('header_logo.png') %></div>
        <div id="headrbg"><%= image_tag('header_bg.png') %></div>
